@page
@model auth.studies.Pages.ToDos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem de ToDos</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered table-hover" style="border: 1px rounded black;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDo[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDo[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDo[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDo[0].LastUpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDo[0].IsDone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ToDo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
